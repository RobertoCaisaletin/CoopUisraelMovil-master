<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CoopUisraelSQlite.Simular">
    <ContentPage.Content>
          <ScrollView>
            <StackLayout Padding="20" Spacing="30">
              
                <Label Text="Monto del crédito: "/>
                <Entry Placeholder="Monto" Keyboard="Numeric" x:Name="txtMonto"/>

                <Label Text="Plazo: "/>
                <Entry Placeholder="Plazo" Keyboard="Numeric" x:Name="txtPlazo"/>

                <Label Text="Pago Total: "/>
                <Label x:Name="lbpagoTotal" Text=""/>
                <Label Text="Pago mensual: "/>
                <Label x:Name="lbpagoMensual" Text=""/>
                <Button x:Name="btn_SimularCredito" Text="Simular Crédito" Clicked="btn_SimularCredito_Clicked" BackgroundColor="Azure">
                </Button>

            </StackLayout>
               </ScrollView>
    </ContentPage.Content>
</ContentPage>
