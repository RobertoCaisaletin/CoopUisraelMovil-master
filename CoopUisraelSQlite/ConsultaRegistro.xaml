<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoopUisraelSQlite.ConsultaRegistro">
    <ContentPage.Content>

        <StackLayout>
            <Label x:Name="lbUsuario"
               FontSize="Medium"
               VerticalOptions="End"
               HorizontalOptions="End" />
            <ListView x:Name="ListaUsuarios" ItemSelected="OnSelection">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding FullName}" Detail="{Binding Monto}"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Button x:Name="btn_InforCredito" Text="Informacion de Credito" Clicked="btn_InformacionCredito_Clicked" BackgroundColor="AliceBlue"/>
            <Button x:Name="btn_CrearCredito" Text="Crear Credito" Clicked="btn_CrearCredito_Clicked" BackgroundColor="LawnGreen"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>