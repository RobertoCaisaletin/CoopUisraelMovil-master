<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoopUisraelSQlite.Mapa">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ubicacion"></Label>
            <Entry Text="Nombre Ubicacion" x:Name="txtNombreUbica"></Entry>
            <Label Text="Latitud" Margin="0,24,0,0"></Label>
            <Entry Text="-0.22985" Keyboard="Numeric" x:Name="txtlatitud"></Entry>
            <Label Text="Longitud" Margin="0,24,0,0"></Label>
            <Entry Text="-78.52495" x:Name="txtLongitud" Keyboard="Numeric"></Entry>
            <Button Text="Abrir Ubicacion" x:Name="btnAbrir" Clicked="btnAbrir_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>